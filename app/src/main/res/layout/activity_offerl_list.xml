<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Offerl_list">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"

        android:visibility="visible"
        >




        <EditText
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/eidit"
            android:paddingLeft="10dp"
            android:text="pack 1"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="@drawable/eidit"
            android:layout_width="match_parent"
            android:layout_height="50dp"


            android:id="@+id/taka"

            android:hint="Taka"
            android:textSize="22sp"
            android:textColor="@color/black"

            />



        <EditText
            android:id="@+id/maindaimond"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="@drawable/eidit"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:hint="Main Daimond"
            android:textSize="22sp"
            android:textColor="@color/black"

            />

        <EditText
            android:id="@+id/bonas"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:background="@drawable/eidit"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:hint="Bonas"
            android:textSize="22sp"
            android:textColor="@color/black"

            />


        <EditText
            android:id="@+id/total"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/eidit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="Total Daimond"
            android:textSize="22sp"
            android:textColor="@color/black"

            />


        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/two_color_curved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save to Data Base"
            android:id="@+id/button"
            />




    </LinearLayout>


</LinearLayout>